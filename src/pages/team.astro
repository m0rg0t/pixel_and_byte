---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/nav.astro";
import Footer from "../components/footer.astro";
---

<Layout title="О команде">
  <Nav />
  <section class="text-[var(--white)] mt-12 md:mt-20 mb-12">
    <div class="max-w-5xl mx-auto space-y-12 py-8">
      <div class="text-left space-y-4">
        <h1 class="text-[var(--white)] text-5xl md:text-6xl font-medium leading-none">
          Наша команда
        </h1>
      </div>

      <div class="space-y-12">
        <div class="flex flex-col md:flex-row items-center gap-6 bg-[#1414149c] border border-[var(--white-icon-tr)] p-6 rounded-2xl">
          <img src="/team/placeholder.svg" alt="Амир Абохсан" class="w-40 h-40 rounded-full object-cover" />
          <div class="space-y-4">
            <h2 class="text-2xl text-[var(--sec)]">Амир Абохсан</h2>
            <p class="text-[var(--white-icon)]">Frontend разработчик</p>
            <div>
              <h3 class="text-xl mb-2">Компетенции</h3>
              <ul class="list-disc list-inside space-y-1">
                <li>React</li>
                <li>Astro</li>
                <li>Tailwind CSS</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="flex flex-col md:flex-row items-center gap-6 bg-[#1414149c] border border-[var(--white-icon-tr)] p-6 rounded-2xl">
          <img src="/team/placeholder.svg" alt="Антон Ленев" class="w-40 h-40 rounded-full object-cover" />
          <div class="space-y-4">
            <h2 class="text-2xl text-[var(--sec)]">Антон Ленев</h2>
            <p class="text-[var(--white-icon)]">Fullstack разработчик</p>
            <div>
              <h3 class="text-xl mb-2">Компетенции</h3>
              <ul class="list-disc list-inside space-y-1">
                <li>Node.js</li>
                <li>PostgreSQL</li>
                <li>Docker</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="flex flex-col md:flex-row items-center gap-6 bg-[#1414149c] border border-[var(--white-icon-tr)] p-6 rounded-2xl">
          <img src="/team/placeholder.svg" alt="Анна Шор" class="w-40 h-40 rounded-full object-cover" />
          <div class="space-y-4">
            <h2 class="text-2xl text-[var(--sec)]">Анна Шор</h2>
            <p class="text-[var(--white-icon)]">Дизайнер</p>
            <div>
              <h3 class="text-xl mb-2">Компетенции</h3>
              <ul class="list-disc list-inside space-y-1">
                <li>Figma</li>
                <li>UI/UX</li>
                <li>Иллюстрации</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="text-3xl text-[var(--sec)]">Достижения</h2>
        <ul class="list-disc list-inside space-y-1">
          <li>Победы на VK Fresh Code 2023</li>
          <li>Победы на VK Fresh Code 2024</li>
        </ul>
      </div>
    </div>
  </section>
  <Footer />
</Layout>
